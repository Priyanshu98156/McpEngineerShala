<?xml version="1.0" encoding="utf-8"?>
<layout>
 <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.courses_fragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/CompEngg"
            android:layout_margin="10dp"
            android:layout_width="180dp"
            android:layout_height="170dp">
            <RelativeLayout

                android:layout_width="200dp"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/computer"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/computer" />

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/computer"
                    android:layout_marginTop="-25dp"
                    android:textColor="@color/black"
                    android:text="Computer Engg"
                    android:textSize="20dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ElectricalEngg"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/electrical"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/electrical"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/electrical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-15dp"
                    android:text="Electrical Engg"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/MechEngg"
            android:layout_margin="10dp"
            android:layout_width="180dp"
            android:layout_height="170dp">
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/mechanical"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/mechanical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mechanical"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-15dp"
                    android:text="Mechanical Engg"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/CivilEngg"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/civil"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/civil"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/civil"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="-15dp"
                    android:text="Civil Engg"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/AutoEngg"
            android:layout_margin="10dp"
            android:layout_width="180dp"
            android:layout_height="170dp">
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/automobile"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/automobile" />

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/automobile"
                    android:layout_marginTop="-25dp"
                    android:textColor="@color/black"
                    android:text="Automobile Engg"
                    android:textSize="20dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/Ece"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="170dp">


                <ImageView

                    android:id="@+id/electronicscomm"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/electronicscomm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/electronicscomm"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="-15dp"
                    android:text="Electronics and communication"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/Pharmacy"
            android:layout_margin="10dp"
            android:layout_width="180dp"
            android:layout_height="170dp">
            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/pharmacy"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/pharmacy" />

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pharmacy"
                    android:layout_marginTop="-15dp"
                    android:textColor="@color/black"
                    android:text="Pharmacy"
                    android:textSize="20dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
 </ScrollView>
</layout>