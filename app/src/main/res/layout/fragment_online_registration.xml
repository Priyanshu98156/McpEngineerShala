<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".fragment.OnlineRegistrationFragment">
    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admission/Registration Performa"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:hint="E-mail"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:hint="Name"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:padding="20dp"
            android:id="@+id/btnDob"
            android:inputType="none"
            android:background="@android:color/transparent"
        android:layout_height="wrap_content"

            />
    <com.google.android.material.textfield.TextInputLayout
        android:hint="D.O.B"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dob"
            />
    </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>


    <TextView
        android:layout_margin = "10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quallification*"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <RadioGroup
        android:id="@+id/rgQualification"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbMatric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matric"/>
        <RadioButton
            android:id="@+id/rbplus1"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"/>
        <RadioButton
            android:id="@+id/rbplus2"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2"/>
        <RadioButton
            android:id="@+id/rbIti"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITI ( 2 years)"/>
    </RadioGroup>

    <TextView
        android:id="@+id/subjects"
        android:visibility="gone"
        android:layout_margin = "10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2,subjects offered:*"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <RadioGroup
        android:visibility="gone"
        android:id="@+id/rgSubjects"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbVocational"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vocational"/>
        <RadioButton
            android:id="@+id/rbScience"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science(Medical/Non-medical)"/>

    </RadioGroup>



    <com.google.android.material.textfield.TextInputLayout
        android:hint="Phone Number"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_margin = "10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category *"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <RadioGroup
        android:id="@+id/rgCategory"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"/>
        <RadioButton
            android:id="@+id/rbSC"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SC/ST"/>
        <RadioButton
            android:id="@+id/rbBC"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BC/OBC"/>
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        app:boxBackgroundColor="#e6e6e6">

        <AutoCompleteTextView
            android:id="@+id/discipline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Interested discipline"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center"
        />

</LinearLayout>
  </ScrollView>
</layout>